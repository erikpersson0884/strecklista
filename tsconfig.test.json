{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "types": ["jest", "node"],
        "typeRoots": ["./src/types", "./node_modules/@types"],
        "lib": ["ES2020", "DOM"],

        "jsx": "react-jsx",            // <-- Add this for JSX support
        "esModuleInterop": true        // <-- Add this for proper imports
    },
    "include": [
        "src/types/*.d.ts",
        "src/types/global.d.ts",
        "src/tests/*.ts",
        "src/**/*.test.ts",
        "src/**/*.test.tsx",
        "src/**/*.spec.ts",
        "src/**/*.spec.tsx"
    ]
}
